{
  "name": "tauri-v2-nextjs-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "check-types": "turbo check-types",
    "shadcn": "pnpm --filter @repo/ui shadcn",
    "tauri": "pnpm --filter native tauri",
    "vercel-build": "turbo build --filter=web"
  },
  "devDependencies": {
    "glob": "^11.0.3",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=18"
  }
}
